<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Transition_Effect.Templates">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Converters/ConverterResourceDictionary.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    
    <DataTemplate x:Key="EffectListItemTemplate">
        <Grid Width="150" Height="100" Margin="5,0" Background="{Binding Converter={StaticResource EffectBackgroundConverter}}" >
            <Border>
            <TextBlock VerticalAlignment="Center"  TextAlignment="Center"  Text="{Binding Name}" TextWrapping="Wrap" FontSize="16" Foreground="White" FontFamily="Global User Interface" />
            </Border>
        </Grid>
    </DataTemplate>
    

</ResourceDictionary>

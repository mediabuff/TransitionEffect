<Page
    x:Class="Transition_Effect.Playback"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Transition_Effect"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <MediaElement IsLooping="True"  MediaOpened="MediaOpened" x:Name="Video" Source="{Binding CurrentVideo}" />
        <ProgressBar Height="1" IsHitTestVisible="False" 
                     Value="{Binding Position, Mode=OneWay}"
                     Maximum="{Binding Maximum}" Margin="10,0"
                     VerticalAlignment="Bottom"/>

        <Slider ValueChanged="SeekPosition"  Grid.Row="1" Maximum="{Binding Maximum}" Margin="10,0"  />
                       
        <Slider  Minimum="-5" Maximum="5" Value="{Binding PlaybackRate}"   Grid.Row="2" Margin="10,0"/>
        
        <Button Content="Save" Click="Save_click" HorizontalAlignment="Center" Grid.Row="3"/>
        
    </Grid>
</Page>
